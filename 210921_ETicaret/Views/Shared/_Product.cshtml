@model _210921_ETicaret.DB.Products
@{
    if (string.IsNullOrEmpty(Model.ProductImageName))
    {
        Model.ProductImageName = "http://placehold.it/150x150";
    }
}
<div class="row mb-2 mt-3">
    <div class="col-md-4">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/@Model.ProductImageName" class="d-block w-100 rounded-circle" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="~/@Model.ProductImageName" class="d-block w-100 rounded-circle" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="~/@Model.ProductImageName" class="d-block w-100 rounded-circle" alt="...">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <div class="col-md-8">
        <div class="form-group text-right">
            <div class="col-md-12">
                <h2>@Model.Name</h2>
            </div>
            <div class="col-md-12">
                <h2 class="text-danger">@Model.Price ₺</h2>
            </div>
        </div>
        <div class="form-group text-justify">
            <p>@Model.Description</p>
        </div>

        <div class="from-group">
            <span class="text-danger mr-4">Derecelendirme:</span>
            <span class="text-warning">
                @for (int i = 0; i < Model.StarPoint; i++)
                {
                    <span class="fa fa-star"></span>
                }

                @for (int i = 0; i < 5 - Model.StarPoint; i++)
                {
                    <span class="fa fa-star-o"></span>
                }
                (@Model.StarGivenMemberCount)
            </span>
        </div>
    </div>
</div>