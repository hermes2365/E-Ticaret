@model _210921_ETicaret.Models.Account.RegisterModels
@{
    ViewBag.Title = "Kayıt Ol";
}

<!-- Content Begin -->
<div class="row my-5">
    <div class="col-md-4 offset-md-4 my-5">
        @using (Html.BeginForm())
        {
            <div class="card shadow border-secondary">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-3">
                            <span class="fa fa-user-plus fa-4x"></span>
                        </div>
                        <div class="col-md-9 text-right">
                            <h2>Kayıt Ol</h2>
                            @if (ViewBag.ReError != null && string.IsNullOrEmpty((string)ViewBag.ReError)==false)
                            {
                                <small class="text-danger">@ViewBag.ReError</small>
                            }

                            else
                            {
                                <small>Lütfen E-Posta ve Şifrenizi giriniz</small>
                            }

                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.Member.Name, new { @class = "form-control", placeholder = "İsim", type = "text" , required="required"})

                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.Member.Surname, new { @class = "form-control", placeholder = "Soyisim", type = "text", required = "required" })

                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.Member.Email, new { @class = "form-control", placeholder = "ornek@ornek.com", type = "email", required = "required" })

                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.Member.Password, new { @class = "form-control", placeholder = "Parola", type = "password", required = "required" })

                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.rePassword, new { @class = "form-control", placeholder = "Parola", type = "password", required = "required" })

                    </div>
                </div>
                <div class="card-footer text-muted text-right">
                    <a href="@Url.Action("Login","Account")" class="btn btn-info">
                        <span class="fa fa-sign-in mr-2"></span>
                        Giriş
                    </a>

                    <button type="submit" class="btn btn-success">
                        <span class="fa fa-save mr-2"></span>
                        Kayıt
                    </button>
                </div>
            </div>
        }
      
    </div>
</div>
<!-- Content End -->
