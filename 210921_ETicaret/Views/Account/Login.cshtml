@model _210921_ETicaret.Models.Account.LoginModels
@{
    ViewBag.Title = "Login";
}

<!-- Content Begin -->
<div class="row my-5">
    <div class="col-md-4 offset-md-4 my-5">
        @using (Html.BeginForm())
        {
            <div class="card shadow border-secondary">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-3">
                            <span class="fa fa-sign-in fa-4x"></span>
                        </div>
                        <div class="col-md-9 text-right">
                            <h2>Giriş</h2>

                            @if (ViewBag.ReError != null && string.IsNullOrEmpty((string)ViewBag.ReError) == false)
                            {
                                <small class="text-danger">@ViewBag.ReError</small>
                            }

                            else
                            {
                                <small>Lütfen E-Posta ve Şifrenizi giriniz</small>
                            }

                        </div>
                        <small class="col-md-12 text-danger text-right"> <i>@TempData["Info"]</i> </small>
                    </div>
                </div>

                <div class="card-body">
                    <div class="form-group">
                        <center>
                            <img src="~/images/account.png" />
                        </center>
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.Member.Email, new { @class = "form-control", placeholder = "ornek@ornek.com", type = "email" })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.Member.Password, new { @class = "form-control", placeholder = "Parola", type = "password" })
                    </div>
                </div>
                <div class="card-footer text-muted text-right">
                    <a href="~/Account/ForgotPassword" class="btn btn-warning">
                        <span class="fa fa-asterisk mr-2"></span>
                        Şifre mi Unuttum
                    </a>

                    <button type="submit" class="btn btn-success">
                        <span class="fa fa-sign-in mr-2"></span>
                        Giriş
                    </button>
                </div>
            </div>
        }

    </div>
</div>
<!-- Content End -->
